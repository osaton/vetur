{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "all",
      "configurations": ["server", "client"]
    }
  ],
  "configurations": [
    {
      "name": "client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}", "--disable-extensions"],
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "server",
      "type": "node",
      "request": "attach",
      "port": 6005,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/stage-server/dist/**/*.js"],
      "protocol": "inspector",
      "restart": true,
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "E2E Test (LSP)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/stage-test/lsp",
        "--user-data-dir=${workspaceFolder}/stage-test/lsp/data-dir",
        "--disable-extensions",
        "${workspaceFolder}/stage-test/lsp/fixture"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/stage-test/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "E2E Test (Interpolation)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/stage-test/interpolation",
        "--user-data-dir=${workspaceFolder}/stage-test/interpolation/data-dir",
        "--disable-extensions",
        "${workspaceFolder}/stage-test/interpolation/fixture"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/stage-test/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "E2E Test (Grammar)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/stage-test/grammar",
        "--user-data-dir=${workspaceFolder}/stage-test/grammar/data-dir",
        "--disable-extensions",
        "${workspaceFolder}/stage-test/grammar/fixture"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/stage-test/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "E2E Test (Vue3)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/stage-test/vue3",
        "--user-data-dir=${workspaceFolder}/stage-test/vue3/data-dir",
        "--disable-extensions",
        "${workspaceFolder}/stage-test/vue3/fixture"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/test/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "E2E Test (Component Data)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/stage-test/componentData",
        "--user-data-dir=${workspaceFolder}/stage-test/componentData/data-dir",
        "--disable-extensions",
        "${workspaceFolder}/stage-test/componentData/fixture"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/stage-test/**/*.js"],
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Test (LSP)",
      "program": "${workspaceFolder}/stage-server/node_modules/mocha/bin/_mocha",
      "args": ["${workspaceFolder}/stage-server/test"],
      "cwd": "${workspaceFolder}/stage-server",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/stage-server/dist/**/*.js"]
    }
  ]
}
